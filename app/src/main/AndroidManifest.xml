<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.weltkulturschnitzelbamberg.weltkulturerbebambergapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.WelcomePageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InstructionsActivity"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name=".activities.InformationActivity"
            android:label="@string/title_activity_information" >
        </activity>
        <activity
            android:name=".activities.ScoreActivity"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name=".activities.ActivityFrage1"
            android:label="@string/title_activity_activity_frage1" >
        </activity>
        <activity
            android:name=".activities.ActivityFrage2"
            android:label="@string/title_activity_activity_frage2" >
        </activity>
        <activity
            android:name=".activities.NavigationActivity"
            android:label="@string/title_activity_navigation" >
        </activity>

        <provider
            android:authorities="com.github.weltkulturschnitzelbamberg.weltkulturerbebambergapp.contentproviders.WeltkulturerbeContentProvider"
            android:name=".contentproviders.WeltkulturerbeContentProvider">
        </provider>
        <receiver
            android:name=".ProximityAlertReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.github.weltkulturschnitzelbamberg.weltkulturerbebambergapp.PROXIMITY_ALERT"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
